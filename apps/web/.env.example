# Appwrite Configuration
NEXT_PUBLIC_APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
NEXT_PUBLIC_APPWRITE_PROJECT=your-project-id
NEXT_PUBLIC_APPWRITE_DATABASE_ID=main

# Appwrite Collections
NEXT_PUBLIC_COLLECTION_USERS=users
NEXT_PUBLIC_COLLECTION_SERVICES=services
NEXT_PUBLIC_COLLECTION_ORDERS=orders
NEXT_PUBLIC_COLLECTION_DOCUMENTS=documents
NEXT_PUBLIC_COLLECTION_MESSAGES=messages
NEXT_PUBLIC_COLLECTION_NOTIFICATIONS=notifications
NEXT_PUBLIC_COLLECTION_PAYMENTS=payments
NEXT_PUBLIC_COLLECTION_ORDER_TIMELINE=order_timeline

# Appwrite Storage Buckets
NEXT_PUBLIC_BUCKET_CUSTOMER_DOCUMENTS=customer-documents

# Appwrite Teams
NEXT_PUBLIC_TEAM_OPERATIONS=operations
NEXT_PUBLIC_TEAM_ADMIN=admin

# Server-side only (DO NOT prefix with NEXT_PUBLIC)
APPWRITE_API_KEY=your-api-key-here

# Razorpay (Phase 2)
NEXT_PUBLIC_RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-secret

# Google Calendar API (for automatic Google Meet links)
# Create a service account at: https://console.cloud.google.com/iam-admin/serviceaccounts
# Enable Google Calendar API at: https://console.cloud.google.com/apis/library/calendar-json.googleapis.com
# Share your calendar with the service account email
GOOGLE_CALENDAR_ID=your-calendar-email@gmail.com
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"...","private_key":"...","client_email":"..."}

# Fallback meeting link (used if Google Calendar is not configured)
DEFAULT_MEETING_LINK=
